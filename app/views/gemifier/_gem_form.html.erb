<%= form_tag(create_gem_path, method: "post") do %>
  <%= label_tag(:repo_name, "Repo Name:") %>
  <%= text_field_tag(:repo_name) %><br>
  <%= label_tag(:gem_name, "Gem Name:") %>
  <%= text_field_tag(:gem_name) %><br>
  <%= label_tag(:description, "Description:") %>
  <%= text_field_tag(:description) %><br>
  <%= label_tag :data %>
  <%= text_field_tag :data, :id => "text" %>
  <%= hidden_field_tag :data, :id => "path" %><br>
  <%= submit_tag("Gemify") %>
<% end %>